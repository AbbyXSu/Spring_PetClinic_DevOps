pipeline {
    agent any

    stages {
        stage('Test Backend') {
            steps {
                script{ 
                    if (env.rollback == 'false'){
                        sh 'bash ./test-backend.sh'
                    }
                }
            }
        }
        stage('Test Frontend') {
            steps {
                script{ 
                    if (env.rollback == 'false'){
                        sh 'bash ./test-frontend.sh'
                    }                
                }
            }
        }
        stage('Build Docker') {
            steps {
                script {         
                    if (env.rollback == 'false'){                         
                        sh 'bash ./build_images.sh'                     
                    }                     
                }
            }
        }
    }
}
pipeline{
    agent any
    tools {
        maven 'Maven 3.6.3'
        jdk 'jdk9'
        nodejs 'node 15.11'
    }
    stages {
        stage('Test Backend') {
            steps {
                script {
                        sh 'bash jenkins/test-backend.sh'
                }
            }
        }
        stage('Test Frontend') {
            steps {
                script {
                    nodejs(nodeJSInstallationName: 'Node 6.x', configId: '<config-file-provider-id>') {
                        sh 'bash jenkins/test-frontend.sh'
                    }
                }
            }
        }
        stage('Build Docker') {
            steps {
                script {
                        sh 'bash jenkins/build_images.sh'
                }
            }
        }
    }
}
